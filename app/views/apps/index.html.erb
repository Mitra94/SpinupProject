<p id="notice"><%= notice %></p>
<br><br>
<h1>Listing Apps</h1>

<% if @apps.present? %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Platform</th>
      <th>Category</th>
      <th>Vote</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= link_to app.name, app %></td>
        <td><%= app.platform %></td>
        <td><%= app.category %></td>
        <td> <%= rating_for app, 'vote', cancel_place: 'right', cancel_hint: 'Cancel this vote!',
                   disable_after_rate: true , imdb_avg: true %> </td> 
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>There are no apps containing the term(s) <%= params[:search] %>.</p>
<% end %>
<br>
