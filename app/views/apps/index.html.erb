<p id="notice"><%= notice %></p>

<h1>Listing Apps</h1>

<% if @apps.present? %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= app.name %></td>
        <td><%= app.category %></td>
        <td><%= link_to 'Show', app %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>There are no apps containing the term(s) <%= params[:search] %>.</p>
<% end %>
<br>
