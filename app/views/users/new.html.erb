<% provide(:title, 'Spin up') %>

<div class="index">
	<h1>Spin up User</h1>

	<div class="leftside">
		<p>Already registered?</p> 
		<span><%= link_to "Spin in as a user", login_path%></span><br>
		<span><%= link_to "Spin in as a developer", logindev_path%></span><br><br>
		<p>You are a developer?</p>
		<span><%= link_to "Spin up as a developer", signup_developer_path%></span><br>
	</div>
	
	<div class="row">
	  <div class="col-md-6 col-md-offset-3">
		<%= form_for(@user) do |f| %>
		  <%= render 'shared/error_messages' , object: f.object%>

		  <%= f.label :username %>
		  <%= f.text_field :username, class: 'form-control' %>

		  <%= f.label :email %>
		  <%= f.email_field :email, class: 'form-control' %>
		  
		  <%= f.label :categories, "Your App's categories prefered" %>
			<%= f.collection_check_boxes :categories, @categories || [], :first, :last , class: 'form-control' do |b|
			b.label { b.check_box + b.text }
		  end %>

		  <%= f.label :password %>
		  <%= f.password_field :password, class: 'form-control' %>

		  <%= f.label :password_confirmation, "Confirmation" %>
		  <%= f.password_field :password_confirmation, class: 'form-control' %><br>

		  <%= f.submit "Create my account", class: "btn btn-primary" %>
		<% end %>
	  </div>
	</div>
</div>
