<%= stylesheet_link_tag "application.css" %>
<div class= "center jumbotron" >
<%if logged_in_dev?%>
      <div class="left">
        <div class="dropdown">
          <button class="dropbtn"> <%=current_dev.name %> </button>
          <div class="dropdown-content">
            <%= link_to "Home", home_path%><br>
            <%= link_to "My profile", developer_path(current_dev) %><br>
            <%= link_to "Settings", edit_developer_path(current_dev) %><br>
            <%= link_to "Create App", new_app_path%><br>
            <%= link_to "Pending invites", controller: 'invites', action: 'pending_invites', :id => current_dev.id %><br>
            <%= link_to "Log out", logoutdev_path, method: "get" %>
          </div>
        </div>
       </div>
    <%end%>  

<%= form_for(@skill) do |f| %>
  <% if @skill.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@skill.errors.count, "error") %> prohibited this skill from being saved:</h2>

      <ul>
      <% @skill.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :'HTML+CSS' %>
    <%= f.number_field :html_css, in: 0..50 %>
  </div>
  <br>
  <div class="field">
    <%= f.label :java %>
    <%= f.number_field :java %>
  </div>
  <br>
  <div class="field">
    <%= f.label :javascript %>
    <%= f.number_field :javascript, in: 0..50 %>
  </div>
  <br>
  <div class="field">
    <%= f.label :c %>
    <%= f.number_field :c, in: 0..50 %>
  </div>
  <br>
  <div class="field">
    <%= f.label :'c++' %>
    <%= f.number_field :c_plus_plus, in: 0..50 %>
  </div>
  <br>
  <div class="field">
    <%= f.label :nodejs %>
    <%= f.number_field :nodejs, in: 0..50 %>
  </div>
  <br>
  <div class="field">
    <%= f.label :database %>
    <%= f.number_field :database, in: 0..50 %>
  </div>
  <br>
  <div class="field">
    <%= f.label :algorithms %>
    <%= f.number_field :algorithms, in: 0..50 %>
  </div>
  <br>
  <div class="field">
    <%= f.label :android %>
    <%= f.number_field :android, in: 0..50 %>
