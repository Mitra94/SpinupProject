<%= stylesheet_link_tag "application.css" %>
<div class= "center jumbotron" >
<%if logged_in_dev?%>
      <div class="left">
        <div class="dropdown">
          <button class="dropbtn"> <%=current_dev.name %> </button>
          <div class="dropdown-content">
            <%= link_to "Home", home_path%><br>
            <%= link_to "My profile", developer_path(current_dev) %><br>
            <%= link_to "Settings", edit_developer_path(current_dev) %><br>
            <%= link_to "Create App", new_app_path%><br>
            <%= link_to "Pending invites", controller: 'invites', action: 'pending_invites', :id => current_dev.id %><br>
            <%= link_to "Log out", logoutdev_path, method: "get" %>
          </div>
        </div>
       </div>
    <%end%> 

<p> <strong>Here you can search a developer according to name,surname,email,city and age </strong></p>

<hr>

<p>
<%= form_tag("/dev_results", method: "get") do %>
  <p><%= label_tag(:q, "Name: ") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search by Name") %></p>
<% end %></p>

<p><%= form_tag("/dev_results", method: "get") do %>
  <p><%= label_tag(:q, "Surname: ") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search by Surname") %></p>
<% end %></p>

<p><%= form_tag("/dev_results", method: "get") do %>
  <p><%= label_tag(:q, "Email: ") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search by Email") %></p>
<% end %></p>

<p><%= form_tag("/dev_results", method: "get") do %>
  <p><%= label_tag(:q, "City: ") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search by City") %></p>
<% end %></p>

<p><%= form_tag("/dev_results", method: "get") do %>
  <p><%= label_tag(:q, "Age: ") %>
  <%= number_field_tag(:q) %>
  <%= submit_tag("Search by Age") %></p>
<% end %></p>

</div>