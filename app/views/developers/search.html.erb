  <%= label_tag(:q, "Email: ") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search by Email") %>
<% end %>

<%= form_tag("/dev_results", method: "get") do %>
  <%= label_tag(:q, "City: ") %>
